<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uzytkownik_Konto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewStanKonta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextKwota"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_inputs"
            android:ems="10"
            android:hint="@string/editTextKwota"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonWplac"
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttons"
            android:text="@string/buttonWplac" />

        <ListView
            android:id="@+id/listViewHistoria"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="450dp"/>

    </LinearLayout>


</ScrollView>